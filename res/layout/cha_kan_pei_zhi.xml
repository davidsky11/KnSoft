<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:gravity="left"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="服务器地址：" />

    <EditText
        android:id="@id/edit_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:inputType="none" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_wangDian"
            android:layout_alignBottom="@id/edit_wangDian"
            android:layout_alignParentLeft="true"
            android:text="网点：" />

        <EditText
            android:id="@id/edit_wangDian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView1"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_jiQiBianHao"
            android:layout_alignBottom="@id/edit_jiQiBianHao"
            android:layout_alignParentLeft="true"
            android:text="机器编号：" />

        <EditText
            android:id="@id/edit_jiQiBianHao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView2"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_saoMiaoMoShi"
            android:layout_alignBottom="@id/edit_saoMiaoMoShi"
            android:layout_alignParentLeft="true"
            android:text="扫描模式：" />

        <EditText
            android:id="@id/edit_saoMiaoMoShi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView3"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_lianJieChaoShi"
            android:layout_alignBottom="@id/edit_lianJieChaoShi"
            android:layout_alignParentLeft="true"
            android:text="连接超时：" />

        <EditText
            android:id="@id/edit_lianJieChaoShi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView4"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_jiLuRiZhi"
            android:layout_alignBottom="@id/edit_jiLuRiZhi"
            android:layout_alignParentLeft="true"
            android:text="记录日志：" />

        <EditText
            android:id="@id/edit_jiLuRiZhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView5"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_zhenDongTiShi"
            android:layout_alignBottom="@id/edit_zhenDongTiShi"
            android:layout_alignParentLeft="true"
            android:text="震动提示：" />

        <EditText
            android:id="@id/edit_zhenDongTiShi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView6"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_piLiangBaoCunShu"
            android:layout_alignBottom="@id/edit_piLiangBaoCunShu"
            android:layout_alignParentLeft="true"
            android:text="批量保存数：" />

        <EditText
            android:id="@id/edit_piLiangBaoCunShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView7"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_banBenHao"
            android:layout_alignBottom="@id/edit_banBenHao"
            android:layout_alignParentLeft="true"
            android:text="版本号：" />

        <EditText
            android:id="@id/edit_banBenHao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/textView8"
            android:ems="10"
            android:enabled="false"
            android:inputType="none" />
    </RelativeLayout>

    <Button
        android:id="@id/button_back_ckpz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="返回" />

</LinearLayout>