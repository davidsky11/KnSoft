<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@android:color/holo_purple" >

            <fragment
                android:id="@id/tab_tiaoMaSaoMiao"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.TiaoMaSaoMiaoFragment" />

            <fragment
                android:id="@id/tab_shanChuShuJu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.ShanChuShuJuFragment" />

            <fragment
                android:id="@id/tab_shuJuShangChuan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.ShuJuShangChuanFragment" />

            <fragment
                android:id="@id/tab_changYongGongJu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.ChangYongGongJuFragment" />

            <fragment
                android:id="@id/tab_guanLiGongJu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.GuanLiGongJuFragment" />

            <fragment
                android:id="@id/tab_chongXinDengLu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="com.kn.fragment.ChongXinDengLuFragment" />
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_weight="0.0"
            android:background="@drawable/bg_tabwidget"
            android:tabStripEnabled="false" />
    </LinearLayout>

</TabHost>